<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="HukutaiaExplorer.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:HukutaiaExplorer.MVVM.Views.StaticPages"
    Title="HukutaiaExplorer"
    Shell.FlyoutBehavior="Disabled">

    <Shell.TitleView>
        <Label FontFamily="PoppinsRegular" FontSize="Body" />
    </Shell.TitleView>

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LandingPage}"
        Route="LandingPage" />

    <Shell.BackgroundColor>
        Black
    </Shell.BackgroundColor>

</Shell>
